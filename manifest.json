{
  "manifest_version": 2,
  "name": "Certificate Detector",
  "version": "1.0",
  "description": "Detects and decodes certificates in textboxes",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "browser_style": true
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["forge.min.js", "content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "texbox-certificate-detector@example.com"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
} 